docotype  
html 
    head 
        style 
            include ./adminStyle.css
        title CommercialsAdmin
        
body
    h1 Admin page
    form(id ="form" action="/editcoom" method="post")
        div.tabCard
            div.card
                div.card-content
                    h3 Number of connected users:
                    input(type = 'hidden', name="comm" id ="com" placeholder="" value=screen)
                    input(name="userscount" id ="userscount" value=usersconnect disabled )
            
                    p Admin is connected
                    p Screen 0:
                    input(name="screen0" id ="screen0" value=screen0 disabled )    
                    p Screen 1:
                    input(name="screen1" id ="screen1" value=screen1 disabled ) 
                    p Screen 2:
                    input(name="screen2" id ="screen2" value=screen2 disabled )  
            div.card
                div.card-content 
                    h2 Admin settings
                    p Admin name:
                    input(name ="adminName" type="text" id="admin1" placeholder="" value=adminName required)
                    p Admin password:
                    input(name ="adminPassword" type="text" id="admin2" placeholder="" value=adminPassword required) 
        div.commCard(id="divCard")
            h2 Add a commercial
            input(name ="myId" type="text" id="myId" placeholder="Add id" required)
            input(name ="myName" type="text" id="myName" placeholder="Add name" required)
            input(name ="opentime" type="text" id="opentime"  placeholder="Add opentime" required)
            input(name ="image" type="text" id="image" placeholder="Add image" required)       
            input(type='submit', value='Submit')
            br
            br
    
    script.
    
            var naeo1;
            var naeo2;           
            var counter1=2;
           
            var currentuser = document.getElementById("com").value;
            var current;  
            current = JSON.parse(currentuser);  
             var counterCom=current.length;
            // Container <div> where dynamic content will be placed
            var container = document.getElementById("form");
            var containerCard = document.getElementById("divCard");

            // Clear previous contents of the container
            for (var i=0;i<current.length;i++){
                // Append a node with a random text
                var number = i;
                containerCard.appendChild(document.createElement("br"));
                containerCard.appendChild(document.createTextNode("commercial " + (number+1)+": "));
                containerCard.appendChild(document.createElement("br"));
                containerCard.appendChild(document.createElement("br"));

                // Create an <input> element, set its type and name attributes
                var input = document.createElement("input");
                var input2 = document.createElement("input");
                var img = document.createElement('img');
                var checkbox = document.createElement('input');
                
                console.log(input2);
                input.type = "text";
                input.name = "com"+ i;
                checkbox.type = "checkbox";
                checkbox.id = "delete" + i ;
                checkbox.name = "delete" + i;
                checkbox.value = "delete" + i ;
                var label = document.createElement('label')
                label.htmlFor = 'delete';
                label.appendChild(document.createTextNode('delete'));
                input.setAttribute("id", "com" + (i))
                input2.setAttribute("id", "com" + (counterCom))
                input2.type = "text";
                input2.name = "com"+ (counterCom);
                containerCard.appendChild(document.createElement("br")); 
                containerCard.appendChild(img); 
                containerCard.appendChild(document.createElement("br"));
                containerCard.appendChild(document.createElement("br"));
                containerCard.appendChild(input);
                containerCard.appendChild(input2);
                containerCard.appendChild(checkbox);
                containerCard.appendChild(label);
                naeo2=document.getElementById("com"+(i));
                naeo1=document.getElementById("com"+(counterCom));
                naeo2.value =current[i].opentime;  
                naeo1.value = current[i].image;
                img.src=current[i].image;
                img.style["width"]="150px";
                img.style["height"]="150px";
                img.style["border"]="1px solid #ddd";
                img.style["border-radius"]="4px";
                img.style["padding"]="5px";
                // Append a line break 
                containerCard.appendChild(document.createElement("br"));
                counterCom++;

            }